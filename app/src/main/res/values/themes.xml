<resources>

    <style name="Base.Theme.OpenInApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
         <item name="colorPrimary">@color/blue</item>
         <item name="colorPrimaryDark">@color/blue</item>
         <item name="colorAccent">@color/blue</item>
         <item name="backgroundColor">@color/background</item>
         <item name="android:windowBackground">@color/background</item>
        <item name="floatingActionButtonStyle">@style/WhiteFab</item>
    </style>

    <style name="WhiteFab" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/white</item>
        <item name="elevation">@dimen/_5sdp</item>
    </style>

    <style name="Theme.OpenInApp" parent="Base.Theme.OpenInApp" />

    <style name="TextViewStyleRegular_12">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/fig_tree_regular</item>
        <item name="android:textColor">@color/dark_text</item>
    </style>

    <style name="TextViewStyleBold_14">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/fig_tree_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextViewStyleSemi_20">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_18sdp</item>
        <item name="android:fontFamily">@font/fig_tree_semi_bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SelectedButtonStyle">
        <item name="android:background">@drawable/back_button_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:fontFamily">@font/fig_tree_semi_bold</item>
    </style>

    <style name="UnselectedButtonStyle">
        <item name="android:background">#00000000</item>
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:fontFamily">@font/fig_tree_semi_bold</item>
    </style>

</resources>