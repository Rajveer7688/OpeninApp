<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_105sdp"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/back_white_cube_8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/back_light_border"
            android:contentDescription="@string/amazon"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/icon_amazon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:gravity="center_vertical"
            android:layout_toStartOf="@+id/linearLayout2"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                style="@style/TextViewStyleRegular_12"
                android:fontFamily="@font/fig_tree_semi_bold"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dateText"
                style="@style/TextViewStyleRegular_12"
                android:layout_marginTop="@dimen/_5sdp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clickNumber"
                style="@style/TextViewStyleBold_14" />

            <TextView
                style="@style/TextViewStyleRegular_12"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="@string/clicks" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/back_blue_dotted"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/linkText"
            style="@style/TextViewStyleRegular_12"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/_40sdp"
            android:layout_toStartOf="@+id/copyButton"
            android:textColor="@color/blue" />

        <ImageView
            android:id="@+id/copyButton"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/icon_copy"
            app:tint="@color/blue"
            android:padding="@dimen/_9sdp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/copy"/>

    </RelativeLayout>

</RelativeLayout>